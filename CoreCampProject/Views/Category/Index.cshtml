@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

    <table class="table table-borderless">
        <tr>
        <th>KategoriID</th>
        <th>Kategori Adı</th>
        <th>Kategori Durumu</th>
        <th>Kategori Detaylar</th>
        <th>Kategori Pasif/Aktif</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
            <td><a htef="#" class="btn btn-danger">Detaylar</a></td>
            <td><a htef="#" class="btn btn-warning">Durumu</a></td>
           
        </tr>
    }
    </table>