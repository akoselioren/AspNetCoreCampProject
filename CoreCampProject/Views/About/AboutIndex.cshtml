@using EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "AboutIndex";
	Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="zxx">
<body>
	<!--/main-->
	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<h3 class="tittle">Hakkımızda</h3>
			<div class="row inner-sec">
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					<div class="blog-grid-top">

						<div class="blog_info_left_grid">
							<a href="single.html">
								<img src="~/web/images/b5.jpg" class="img-fluid" alt="">
							</a>
						</div>
						<h3>
							Misyonumuz ve Vizyonumuz
						</h3>
						@foreach(var item in Model)
						{
						<p>@item.AboutDetails1</p>
						}
					</div>
				</div>
				<!--//left-->
				<!--right-->
				<aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
					<div class="right-blog-info text-left">
						
						@await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
						@await Html.PartialAsync("~/Views/About/SocialMediaAboutPartial.cshtml")
						<div class="tech-btm">
							<h4>Son Bloglar</h4>
							@await Component.InvokeAsync("WriterLastBlog")
						</div>
					</div>

				</aside>
				<!--//right-->
			</div>
		</div>
	</section>
	<!--//main-->


</body>

</html>
